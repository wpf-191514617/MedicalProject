<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grayf5"
    android:orientation="vertical">

    <include layout="@layout/toolbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:paddingLeft="@dimen/dimen_20dp"
        android:paddingTop="@dimen/dimen_19dp"
        android:paddingBottom="@dimen/dimen_21dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="检查项目："
                android:textColor="#ff858585"
                android:textSize="14sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="血常规五分类"
                android:textColor="@color/gray33"
                android:textSize="14sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_6dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="就诊人："
                android:textColor="#ff858585"
                android:textSize="14sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="曾威"
                android:textColor="@color/gray33"
                android:textSize="14sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_6dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="检查时间："
                android:textColor="#ff858585"
                android:textSize="14sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2019-1-20 09:33:55"
                android:textColor="@color/gray33"
                android:textSize="14sp"/>

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dimen_20dp"
        android:paddingRight="@dimen/dimen_25dp"
        android:background="@color/white"
        android:layout_marginTop="@dimen/dimen_8dp"
        android:paddingTop="@dimen/dimen_22dp"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_18dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="项目"
                android:textColor="#ff333333"
                android:textSize="14sp"/>


            <TextView
                android:layout_width="@dimen/dimen_80dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="结果"
                android:textColor="#ff333333"
                android:textSize="14sp"/>


            <TextView
                android:layout_width="@dimen/dimen_80dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="参考值"
                android:textColor="#ff333333"
                android:textSize="14sp"/>


        </LinearLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvCost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:overScrollMode="never"
            android:layout_marginBottom="@dimen/dimen_20dp"/>

        </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="@dimen/dimen_14dp"
        android:text="指标仅供参考，请以医院纸质报告为准"
        android:textColor="#ff858585"
        android:textSize="11sp"
        />


</LinearLayout>