<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/toolbar"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dimen_20dp"
        android:paddingLeft="@dimen/dimen_16dp"
        android:paddingRight="@dimen/dimen_16dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/dimen_24dp"
            android:orientation="horizontal">



            <LinearLayout
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingTop="@dimen/dimen_3dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvDoctorName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="张医生"
                    android:textColor="#ff333333"
                    android:textSize="16sp"/>


                <TextView
                    android:id="@+id/tvDoctorJobTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="呼吸内科 主治医师"
                    android:textColor="#ff858585"
                    android:textSize="14sp"
                    android:layout_marginTop="@dimen/dimen_9dp"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_8dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tvHospitalName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="天津医科大学总医院"
                        android:textColor="#ff333333"
                        android:textSize="12sp"
                        />

                    <TextView
                        android:id="@+id/tvHospitalLevel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="三甲"
                        android:textColor="#FEA50B"
                        android:layout_marginLeft="@dimen/dimen_8dp"
                        android:textSize="12sp"/>

                </LinearLayout>

            </LinearLayout>

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="@dimen/dimen_72dp"
                android:layout_height="@dimen/dimen_72dp"
                android:layout_marginEnd="@dimen/dimen_2dp"
                android:src="@mipmap/ic_launcher_round"/>

        </LinearLayout>


        <include layout="@layout/line"/>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dimen_24dp"
            android:paddingBottom="@dimen/dimen_23dp"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="bottom">

                <View
                    android:layout_width="3dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_radius3"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="擅长疾病"
                    android:textColor="#ff333333"
                    android:textSize="16sp"
                    android:layout_marginLeft="@dimen/dimen_8dp"
                    android:textStyle="bold"/>


            </LinearLayout>


            <TextView
                android:id="@+id/tvSpecialtyContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#858585"
                android:textSize="12sp"
                android:lineSpacingExtra="@dimen/dimen_6dp"
                android:layout_marginTop="@dimen/dimen_15dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/dimen_23dp"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="bottom">

                <View
                    android:layout_width="3dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_radius3"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="个人简介"
                    android:textColor="#ff333333"
                    android:textSize="16sp"
                    android:layout_marginLeft="@dimen/dimen_8dp"
                    android:textStyle="bold"/>


            </LinearLayout>


            <TextView
                android:id="@+id/tvIntroductionContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#858585"
                android:textSize="12sp"
                android:lineSpacingExtra="@dimen/dimen_6dp"
                android:layout_marginTop="@dimen/dimen_15dp"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/dimen_23dp"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="bottom">

                <View
                    android:layout_width="3dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_radius3"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="执业点"
                    android:textColor="#ff333333"
                    android:textSize="16sp"
                    android:layout_marginLeft="@dimen/dimen_8dp"
                    android:textStyle="bold"/>


            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_15dp"
                android:orientation="horizontal">

            <TextView
                android:id="@+id/tvPracticePointContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#858585"
                android:textSize="12sp"
                android:text="复旦大学附属耳鼻喉科医院   耳鼻喉科 "
                android:lineSpacingExtra="@dimen/dimen_6dp"
                />


                <TextView
                    android:id="@+id/tvHospitalLevelContent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 三甲"
                    android:textColor="#FEA50B"
                    android:textSize="12sp"
                    />

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>



</LinearLayout>