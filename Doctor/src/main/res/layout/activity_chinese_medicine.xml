<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dimen_15dp"
        android:paddingTop="@dimen/dimen_21dp"
        android:background="@color/white"
        android:paddingRight="@dimen/dimen_15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_90dp"
            android:layout_marginBottom="@dimen/dimen_18dp"
            android:background="@drawable/bg_gray_radiu3"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dimen_12dp"
            android:paddingRight="@dimen/dimen_15dp">

            <ImageView
                android:layout_width="@dimen/dimen_58dp"
                android:layout_height="@dimen/dimen_58dp"
                android:src="@mipmap/ic_launcher" />

            <LinearLayout
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_13dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="阿莫西林"
                    android:textColor="#ff333333"
                    android:textSize="14sp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_5dp"
                    android:text="单价：15元/斤"
                    android:textColor="#ff333333"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_3dp"
                    android:text="厂家：香港某某制药厂"
                    android:textColor="#ff333333"
                    android:textSize="12sp" />

            </LinearLayout>

        </LinearLayout>

        <com.beitone.medical.doctor.widget.InputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:inputLable="每次用量"
            app:inputHnit="请输入每次用量"/>

        <include layout="@layout/line"/>

        <com.beitone.medical.doctor.widget.InputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:inputLable="备注"
            app:inputHnit="请输入备注"/>

        <include layout="@layout/line"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/dimen_18dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="总价："
                android:textColor="#ff000000"
                android:textSize="14sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100"
                android:textColor="#FE7047"
                android:textSize="14sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 元"
                android:textColor="#ff000000"
                android:textSize="14sp"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/dimen_18dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="总量："
                android:textColor="#ff000000"
                android:textSize="14sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20"
                android:textColor="#FE7047"
                android:textSize="14sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 克"
                android:textColor="#ff000000"
                android:textSize="14sp"/>

        </LinearLayout>


        <com.beitone.medical.doctor.widget.AppButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_36dp"
            android:text="保存"
            app:btnStyle="haveRadius"/>



        <com.beitone.medical.doctor.widget.AppButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_13dp"
            android:text="保存并新增药品"
            app:btnStyle="strokeGray"/>

    </LinearLayout>





</LinearLayout>