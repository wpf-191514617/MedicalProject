<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/dp10">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:background="@color/nc_white"
        android:padding="10dp">

        <ImageView
            android:id="@+id/coupon_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginRight="8dp"
            android:src="@drawable/nc_icon_null" />

        <TextView
            android:id="@+id/coupon_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/coupon_image" />

        <TextView
            android:id="@+id/coupon_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/coupon_name"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/coupon_image" />

    </RelativeLayout>

    <net.shopnc.b2b2c.android.ui.mine.MyDiscountCoupon
        android:id="@+id/coupon_background"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:background="@color/nc_red"
        android:gravity="right"
        android:orientation="vertical"
        android:padding="6dp">

        <TextView
            android:id="@+id/coupon_store_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:textColor="@color/nc_white"
            android:textSize="@dimen/dp16" />

        <TextView
            android:id="@+id/coupon_store_condition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:textColor="@color/nc_white"
            android:textSize="@dimen/dp12" />

        <TextView
            android:id="@+id/coupon_store_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="1dp"
            android:textColor="@color/nc_white"
            android:textSize="@dimen/dp12" />

    </net.shopnc.b2b2c.android.ui.mine.MyDiscountCoupon>
</LinearLayout>

