<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/nc_border"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/nc_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/nc_icon_store" />

        <TextView
            android:id="@+id/tvStoreName"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp4"
            android:gravity="center_vertical"
            android:text="@string/layout_recyclerview_buystep_store_item0"
            android:textColor="@color/nc_text" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llSpu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/nc_white"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingLeft="@dimen/dp10"
        android:paddingRight="@dimen/dp10"></LinearLayout>

    <RelativeLayout
        android:id="@+id/rlStore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@color/nc_white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/dp8"
            android:text="@string/layout_recyclerview_buystep_store_item1"
            android:textColor="@color/nc_text_dark"
            android:textSize="@dimen/tv14sp" />

        <TextView
            android:id="@+id/tvConform"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/dp10"
            android:layout_toRightOf="@id/textView2"
            android:gravity="right"
            android:text="@string/layout_recyclerview_buystep_store_item2"
            android:textColor="@color/nc_text_dark"
            android:textSize="@dimen/tv14sp" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rlStoreDiscount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@color/nc_white">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp8"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/layout_recyclerview_buystep_store_item3"
                android:textColor="@color/nc_text_dark"
                android:textSize="@dimen/tv14sp" />

            <TextView
                android:id="@+id/tvStoreDiscountNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp4"
                android:layout_toEndOf="@+id/textView2"
                android:background="@drawable/red_border_small"
                android:padding="@dimen/dp2"
                android:text="已选1张"
                android:textColor="@color/nc_red"
                android:textSize="@dimen/tv12sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llVoucherName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvVoucherName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/layout_buy_step1_view7"
                android:textColor="@color/nc_text_dark" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp2"
                android:src="@drawable/nc_icon_arrow_right" />
        </LinearLayout>
    </RelativeLayout>

    <!--发票信息-->
    <RelativeLayout
        android:id="@+id/rlAllowVat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@color/nc_white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/dp8"
            android:text="@string/layout_buy_step1_view6"
            android:textColor="@color/nc_text_dark"
            android:textSize="@dimen/tv14sp" />

        <LinearLayout
            android:id="@+id/llAllowVatName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvAllowVatName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/layout_buy_step1_view7"
                android:textColor="@color/nc_text_dark" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp2"
                android:src="@drawable/nc_icon_arrow_right" />
        </LinearLayout>
    </RelativeLayout>

    <!--配送时间-->
    <RelativeLayout
        android:id="@+id/rlDeliveryTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@color/nc_white">

        <TextView
            android:id="@+id/tvDeliveryTimeTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/dp8"
            android:text="@string/delivery_time"
            android:textColor="@color/nc_text_dark"
            android:textSize="@dimen/tv14sp" />

        <LinearLayout
            android:id="@+id/llDeliveryTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvDeliveryTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/layout_buy_step1_view7"
                android:textColor="@color/nc_text_dark"
                android:textSize="@dimen/tv14sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp2"
                android:src="@drawable/nc_icon_arrow_right" />
        </LinearLayout>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rlFee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@color/nc_white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp8"
            android:text="@string/layout_recyclerview_buystep_store_item5"
            android:textColor="@color/nc_text_dark"
            android:textSize="@dimen/tv14sp" />

        <TextView
            android:id="@+id/tvFreight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:gravity="right"
            android:text="¥0.00"
            android:textColor="@color/nc_text_dark"
            android:textSize="@dimen/tv14sp" />

    </RelativeLayout>


    <LinearLayout
        android:id="@+id/llStoreMsg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@color/nc_white"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="horizontal">

        <net.shopnc.b2b2c.android.custom.edittext.EditTextForDelete
            android:id="@+id/etStoreMsg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/llStoreAll"
            android:layout_margin="@dimen/dp10"
            android:padding="@dimen/dp10"
            android:background="@drawable/bg_round_gray"
            android:hint="@string/layout_recyclerview_buystep_store_item6"
            android:textColor="@color/nc_text_dark"
            android:textSize="@dimen/tv14sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/tvStoreAll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:layout_weight="2"
        android:background="@color/nc_white"
        android:gravity="right"
        android:paddingBottom="14dp"
        android:paddingRight="@dimen/dp10"
        android:paddingTop="14dp"
        android:text="0.00"
        android:textColor="@color/nc_text_dark"
        android:textSize="@dimen/tv14sp" />

    <View style="@style/NCLine" />

</LinearLayout>