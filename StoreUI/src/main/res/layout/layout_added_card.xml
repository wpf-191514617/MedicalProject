<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rlAddedCard"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/nc_white">

        <TextView
            android:id="@+id/tvAddedCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp10"
            android:textColor="@color/nc_text_dark"
            android:textSize="@dimen/tv14sp"/>

        <ImageView
            android:id="@+id/ivAddCardCancel"
            android:layout_width="@dimen/dp20"
            android:layout_height="@dimen/dp20"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp10"
            android:src="@drawable/cancel_card" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignLeft="@id/tvAddedCard"
            android:layout_alignParentTop="true"
            android:background="@color/nc_line" />
    </RelativeLayout>

</LinearLayout>