<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llVoucherContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/nc_white"
    android:orientation="vertical">

    <net.shopnc.b2b2c.android.ui.mine.MyDiscountHorizon
        android:id="@+id/llVoucher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/redVoucher"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:id="@+id/tvtemplatePrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5"
            android:textColor="@color/white"
            android:textSize="40sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/layout_voucher_listview_item0"
                android:textColor="@color/white"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tvtemplateTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/layout_voucher_listview_item1"
                android:textColor="@color/white"
                android:textSize="13sp" />

        </LinearLayout>

        <Button
            android:id="@+id/btnGet"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/nc_btn_voucher_round_bg"
            android:text="@string/layout_voucher_listview_item2"
            android:textColor="@color/redVoucher"
            android:textSize="12sp"/>

    </net.shopnc.b2b2c.android.ui.mine.MyDiscountHorizon>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="6dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/layout_voucher_listview_item3"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tvuseStartTimeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2016.05.08"
            android:textSize="13sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/layout_voucher_listview_item4"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tvuseEndTimeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2016.06.08"
            android:textSize="13sp" />
    </LinearLayout>

</LinearLayout>
