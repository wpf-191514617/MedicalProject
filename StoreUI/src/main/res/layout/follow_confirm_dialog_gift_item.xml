<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingLeft="10dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@drawable/nc_btn_bg_on"
        android:padding="2dp"
        android:text="@string/layout_follow_confirm_dialog_gift_item0"
        android:textColor="@color/nc_white"
        android:textSize="@dimen/dp10" />

    <TextView
        android:id="@+id/btnSortView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:paddingBottom="4dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="2dp"
        android:text="@string/layout_follow_confirm_dialog_gift_item1"
        android:textColor="@color/nc_text"
        android:textSize="14dp" />

</LinearLayout>