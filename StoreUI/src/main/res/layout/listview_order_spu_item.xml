<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:zhy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rlOrderSpu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivGoodPic"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="left"
            android:layout_margin="5dp" />

        <LinearLayout
            android:id="@+id/llGoodName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="26dp"
            android:layout_toLeftOf="@+id/tvGoodPrice"
            android:layout_toRightOf="@+id/ivGoodPic"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvGoodsType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_round_red"
                android:padding="@dimen/dp2"
                android:text="虚拟"
                android:textColor="@color/nc_white"
                android:textSize="@dimen/tv12sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvGoodName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp2"
                android:maxLines="2"
                android:paddingTop="6dp"
                android:text="@string/layout_listview_order_spu_item0"
                android:textColor="@color/nc_text_dark"
                android:textSize="@dimen/tv14sp" />

        </LinearLayout>


        <TextView
            android:id="@+id/tvGoodsSPec"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/llGoodName"
            android:layout_marginRight="26dp"
            android:layout_toLeftOf="@+id/tvGoodPrice"
            android:layout_toRightOf="@+id/ivGoodPic"
            android:maxLines="2"
            android:paddingBottom="4dp"
            android:text="guigeguige"
            android:textColor="@color/buystep_sku_text"
            android:textSize="@dimen/dp12" />

        <TextView
            android:id="@+id/tvPromotionTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/ivGoodPic"
            android:layout_alignRight="@+id/ivGoodPic"
            android:background="@drawable/nc_btn_bg_on"
            android:paddingBottom="2dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:paddingTop="2dp"
            android:text="@string/layout_listview_order_spu_item1"
            android:textColor="@color/nc_white"
            android:textSize="@dimen/dp10"
            android:visibility="gone" />

        <com.zhy.view.flowlayout.TagFlowLayout
            android:id="@+id/flowlayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvGoodsSPec"
            android:layout_toRightOf="@id/ivGoodPic"
            zhy:max_select="-1" />

        <TextView
            android:id="@+id/tvGoodPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingRight="6dp"
            android:paddingTop="6dp"
            android:singleLine="true"
            android:text="$ 0.00"
            android:textColor="@color/black"
            android:textSize="@dimen/dp14" />

        <TextView
            android:id="@+id/tvGoodsNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tvGoodPrice"
            android:paddingRight="6dp"
            android:paddingTop="6dp"
            android:singleLine="true"
            android:text="1"
            android:textColor="#959595"
            android:textSize="@dimen/dp14" />

        <LinearLayout
            android:id="@+id/llOrderRefund"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_below="@id/flowlayout"
            android:layout_marginRight="6dp"
            android:orientation="horizontal"
            android:paddingBottom="6dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/btnOrderMoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/btn_cancle"
                android:paddingBottom="4dp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:paddingTop="4dp"
                android:text="@string/layout_listview_order_spu_item2"
                android:textColor="@color/nc_text"
                android:textSize="@dimen/dp10" />

            <TextView
                android:id="@+id/btnOrderGood"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/btn_cancle"
                android:paddingBottom="4dp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:paddingTop="4dp"
                android:text="@string/layout_listview_order_spu_item3"
                android:textColor="@color/nc_text"
                android:textSize="@dimen/dp10" />

            <TextView
                android:id="@+id/btnOrderMoneySearch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/btn_cancle"
                android:paddingBottom="4dp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:paddingTop="4dp"
                android:text="@string/view_refund"
                android:textColor="@color/nc_text"
                android:textSize="@dimen/dp10" />

            <TextView
                android:id="@+id/btnOrderGoodSearch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/btn_cancle"
                android:paddingBottom="4dp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:paddingTop="4dp"
                android:text="@string/view_return"
                android:textColor="@color/nc_text"
                android:textSize="@dimen/dp10" />

            <TextView
                android:id="@+id/btnOrderComplaint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/btn_cancle"
                android:paddingBottom="4dp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:paddingTop="4dp"
                android:text="@string/layout_listview_order_spu_item4"
                android:textColor="@color/nc_text"
                android:textSize="@dimen/dp10" />

            <TextView
                android:id="@+id/tvOrderComplaint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:paddingBottom="4dp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:paddingTop="4dp"
                android:text="@string/layout_listview_order_spu_item5"
                android:textColor="@color/nc_text_dark"
                android:textSize="@dimen/dp10" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llOrderVirtualRefund"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_below="@id/flowlayout"
            android:layout_marginRight="6dp"
            android:orientation="horizontal"
            android:paddingBottom="6dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/btnOrderVirtualMoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/btn_cancle"
                android:paddingBottom="4dp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:paddingTop="4dp"
                android:text="@string/layout_listview_order_spu_item2"
                android:textColor="@color/nc_text"
                android:textSize="@dimen/dp10" />

            <TextView
                android:id="@+id/btnOrderVirtualComplaint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/btn_cancle"
                android:paddingBottom="4dp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:paddingTop="4dp"
                android:text="@string/view_virtual_code"
                android:textColor="@color/nc_text"
                android:textSize="@dimen/dp10" />

            <TextView
                android:id="@+id/tvOrderVirtualComplaint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:paddingBottom="4dp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:paddingTop="4dp"
                android:text="@string/layout_listview_order_spu_item5"
                android:textColor="@color/nc_text_dark"
                android:textSize="@dimen/dp10"
                android:visibility="gone" />

        </LinearLayout>


    </RelativeLayout>


    <View
        style="@style/NCLine"
        android:layout_below="@id/rlOrderSpu"
        android:layout_marginTop="@dimen/dp5" />

</RelativeLayout>