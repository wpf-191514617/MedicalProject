<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View style="@style/NCLine" />

    <!--平台券-->
    <RelativeLayout
        android:id="@+id/llRP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/nc_white">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp8"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/layout_buy_step1_view1"
                android:textColor="@color/nc_text_dark"
                android:textSize="@dimen/tv14sp" />

            <TextView
                android:id="@+id/tvCouponNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp4"
                android:background="@drawable/red_border_small"
                android:padding="@dimen/dp2"
                android:textColor="@color/nc_red"
                android:textSize="@dimen/tv12sp" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/llRPName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvRPName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/layout_buy_step1_view2"
                android:textColor="@color/nc_text_dark" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp2"
                android:src="@drawable/nc_icon_arrow_right" />
        </LinearLayout>
    </RelativeLayout>

    <View style="@style/NCLine" />

    <!--积分抵现-->
    <RelativeLayout
        android:id="@+id/rlMemberPoints"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/nc_white">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp8"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/layout_buy_step1_view1_1"
                android:textColor="@color/nc_text_dark"
                android:textSize="@dimen/tv14sp" />

            <TextView
                android:id="@+id/tvMemberPointsDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp4"
                android:padding="@dimen/dp2"
                android:textSize="@dimen/tv12sp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvMemberPointsDesc1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp4"
                android:padding="@dimen/dp2"
                android:textSize="@dimen/tv12sp" />

            <ImageView
                android:id="@+id/ivMemberPointsSelect"
                android:layout_width="35dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/nc_check" />

        </LinearLayout>
    </RelativeLayout>

    <View style="@style/NCLine" />

    <!--支付方式-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/nc_white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/dp8"
            android:text="@string/layout_buy_step1_view3"
            android:textColor="@color/nc_text_dark"
            android:textSize="@dimen/tv14sp" />


        <LinearLayout
            android:id="@+id/llShowOnpayID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvShowOnpayID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp2"
                android:text="@string/layout_buy_step1_view4"
                android:textColor="@color/nc_text_dark" />

            <ImageView
                android:id="@+id/ivShowOnpayID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp2"
                android:src="@drawable/nc_icon_arrow_right"
                android:visibility="gone" />
        </LinearLayout>

        <RadioGroup
            android:id="@+id/rgShowPayID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:orientation="horizontal"
            android:visibility="gone">

            <RadioButton
                android:id="@+id/ifshowOnpayID"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:button="@null"
                android:checked="true"
                android:drawableLeft="@drawable/buy_step1_check_bg"
                android:drawablePadding="5dip"
                android:text="@string/layout_buy_step1_view4"
                android:textColor="@color/nc_text_dark"
                android:textSize="@dimen/dp14" />

            <RadioButton
                android:id="@+id/ifshowOffpayID"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:button="@null"
                android:drawableLeft="@drawable/buy_step1_check_bg"
                android:drawablePadding="5dip"
                android:text="@string/layout_buy_step1_view5"
                android:textColor="@color/nc_text_dark"
                android:textSize="@dimen/dp14"
                android:visibility="gone" />
        </RadioGroup>
    </RelativeLayout>

    <View style="@style/NCLine" />
    <!--商品金额-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/nc_white">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp8"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/goods_amount"
                android:textColor="@color/nc_text_dark"
                android:textSize="@dimen/tv14sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/tvGoodsmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:textColor="@color/nc_red"
            android:textSize="@dimen/tv16sp" />
    </RelativeLayout>

    <View style="@style/NCLine" />

    <!--税费-->
    <RelativeLayout
        android:id="@+id/rlTaxes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/nc_white">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp8"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/taxes"
                android:textColor="@color/nc_text_dark"
                android:textSize="@dimen/tv14sp" />

        </LinearLayout>


        <TextView
            android:id="@+id/tvTaxes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:textColor="@color/nc_red"
            android:textSize="@dimen/tv16sp" />
    </RelativeLayout>

    <View style="@style/NCLine" />

    <!--运费-->
    <RelativeLayout
        android:id="@+id/rlFreight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/nc_white">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp8"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/freight"
                android:textColor="@color/nc_text_dark"
                android:textSize="@dimen/tv14sp" />

        </LinearLayout>


        <TextView
            android:id="@+id/tvFreight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:textColor="@color/nc_red"
            android:textSize="@dimen/tv16sp" />
    </RelativeLayout>

    <View style="@style/NCLine" />

    <!--店铺优惠-->
    <RelativeLayout
        android:id="@+id/rlDiscountStores"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/nc_white">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp8"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/discount_stores"
                android:textColor="@color/nc_text_dark"
                android:textSize="@dimen/tv14sp" />

        </LinearLayout>


        <TextView
            android:id="@+id/tvDiscountStores"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:textColor="@color/nc_red"
            android:textSize="@dimen/tv16sp" />
    </RelativeLayout>

    <View style="@style/NCLine" />

    <!--商城优惠-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/nc_white">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp8"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:text="@string/mall_preferential"
                android:textColor="@color/nc_text_dark"
                android:textSize="@dimen/tv14sp" />

        </LinearLayout>


        <TextView
            android:id="@+id/tvMallPreferential"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:textColor="@color/nc_red"
            android:textSize="@dimen/tv16sp" />
    </RelativeLayout>


</LinearLayout>