<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/goodsItem"
    android:background="@android:color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageGoodsPic"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:paddingRight="5dp" />

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="110dp"
            android:layout_weight="1"
            android:paddingLeft="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/llGoodsItem"
                    android:layout_width="match_parent"
                    android:layout_height="78dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textGoodsName"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:gravity="top"
                        android:maxLines="2"
                        android:textColor="@color/nc_text"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/textGoodsJingle"
                        android:layout_width="wrap_content"
                        android:layout_height="16dp"
                        android:maxLines="1"
                        android:textColor="@color/nc_fg"
                        android:textSize="12sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textGoodsPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:text="$ 0.00"
                            android:textColor="@color/nc_btn_bg"
                            android:textSize="14sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/textGoodsType"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="3dp"
                                android:background="@color/nc_btn_bg"
                                android:paddingLeft="3dp"
                                android:paddingRight="3dp"
                                android:text="@string/layout_listivew_store_goods_item0"
                                android:textColor="@color/nc_white"
                                android:textSize="12dp"
                                android:visibility="gone" />

                            <TextView
                                android:id="@+id/textZengPin"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="3dp"
                                android:background="@color/nc_btn_bg"
                                android:paddingLeft="3dp"
                                android:paddingRight="3dp"
                                android:text="@string/layout_listivew_store_goods_item1"
                                android:textColor="@color/nc_white"
                                android:textSize="12dp"
                                android:visibility="gone" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="32dp">

                    <TextView
                        android:id="@+id/tvGoodsSalenum"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:gravity="center_vertical"
                        android:text="@string/layout_listivew_store_goods_item2"
                        android:textColor="@color/nc_text"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/tvOwnShop"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="5dp"
                        android:background="@color/nc_btn_bg"
                        android:paddingLeft="2dp"
                        android:paddingRight="2dp"
                        android:text="@string/layout_listivew_store_goods_item3"
                        android:textColor="@color/nc_white"
                        android:textSize="10dp" />

                    <Button
                        android:id="@+id/btnStoreName"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="5dp"
                        android:background="@null"
                        android:drawableRight="@drawable/nc_icon_more_dot"
                        android:gravity="center_vertical"
                        android:textColor="@color/nc_text"
                        android:textSize="12dp" />

                    <TextView
                        style="@style/NCLine"
                        android:layout_alignParentBottom="true" />
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llStoreInfo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/nc_bg"
                android:orientation="vertical"
                android:padding="5dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tvStoreName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:drawableRight="@drawable/nc_icon_arrow_right"
                    android:textColor="@color/nc_text"
                    android:textSize="14dp" />

                <TextView style="@style/NCLine" />

                <LinearLayout
                    android:id="@+id/llStoreEval"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/layout_listivew_store_goods_item4"
                            android:textColor="@color/nc_text"
                            android:textSize="11dp" />

                        <TextView
                            android:id="@+id/tvStoreDescPoint"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3dp"
                            android:layout_marginRight="3dp"
                            android:text="5.0"
                            android:textColor="@color/nc_btn_bg"
                            android:textSize="11dp" />

                        <TextView
                            android:id="@+id/tvStoreDescText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/nc_btn_bg"
                            android:paddingLeft="1dp"
                            android:paddingRight="1dp"
                            android:text="@string/layout_listivew_store_goods_item5"
                            android:textColor="@color/nc_white"
                            android:textSize="9dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/layout_listivew_store_goods_item6"
                            android:textColor="@color/nc_text"
                            android:textSize="11dp" />

                        <TextView
                            android:id="@+id/tvStoreServicePoint"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3dp"
                            android:layout_marginRight="3dp"
                            android:text="5.0"
                            android:textColor="@color/nc_btn_bg"
                            android:textSize="11dp" />

                        <TextView
                            android:id="@+id/tvStoreServiceText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/nc_btn_bg"
                            android:paddingLeft="1dp"
                            android:paddingRight="1dp"
                            android:text="@string/layout_listivew_store_goods_item7"
                            android:textColor="@color/nc_white"
                            android:textSize="9dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/layout_listivew_store_goods_item8"
                            android:textColor="@color/nc_text"
                            android:textSize="11dp" />

                        <TextView
                            android:id="@+id/tvStoreDeliveryPoint"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3dp"
                            android:layout_marginRight="3dp"
                            android:text="5.0"
                            android:textColor="@color/nc_btn_bg"
                            android:textSize="11dp" />

                        <TextView
                            android:id="@+id/tvStoreDeliveryText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/nc_btn_bg"
                            android:paddingLeft="1dp"
                            android:paddingRight="1dp"
                            android:text="@string/layout_listivew_store_goods_item9"
                            android:textColor="@color/nc_white"
                            android:textSize="9dp" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>

    </LinearLayout>

</LinearLayout>