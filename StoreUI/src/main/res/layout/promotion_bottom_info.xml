<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:layout_alignParentBottom="true"
    android:background="@drawable/nc_bg_border_top_and_bottom"
    android:orientation="horizontal">


    <TextView
        android:id="@+id/tvGoodsInfo"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:layout_weight="2"
        android:gravity="center"
        android:text="@string/layout_promotion_bottom_info0"
        android:textColor="@color/nc_text"
        android:textSize="14sp" />

    <Button
        android:id="@+id/btnMyRepo"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/promotion_green_lt"
        android:padding="10dip"
        android:text="@string/layout_promotion_bottom_info1"
        android:textColor="@color/nc_white"
        android:textSize="14sp" />

    <Button
        android:id="@+id/btnAdd"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/promotion_green_dk"
        android:padding="10dip"
        android:text="@string/layout_promotion_bottom_info2"
        android:textColor="@color/nc_white"
        android:textSize="14sp" />

</LinearLayout>
