<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/nc_bg"
              android:orientation="vertical">
    <!--<View-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="10dp"-->
        <!--android:background="@color/nc_bg"/>-->

    <LinearLayout
        android:layout_margin="@dimen/dimen_2"
        android:background="@color/app_white"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tvRepoName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp4"
            android:text="@string/layout_repo_grid_item0"/>

        <TextView
            android:id="@+id/tvGoodsNum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp4"
            android:text="@string/layout_repo_grid_item1"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@drawable/repo_divider_dash_line"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivGoodPic1"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"/>

            <ImageView
                android:id="@+id/ivGoodPic2"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"/>

            <ImageView
                android:id="@+id/ivGoodPic3"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"/>

            <ImageView
                android:id="@+id/ivGoodPic4"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>