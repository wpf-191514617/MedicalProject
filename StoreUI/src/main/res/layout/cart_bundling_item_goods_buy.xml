<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:paddingLeft="10dp"
              android:paddingRight="10dp"
              android:paddingTop="10dp">

    <!-- 商品信息 -->
    <LinearLayout
        android:id="@+id/llContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivGoodsImage"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/nc_bg_border"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvGoodsName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/nc_text_dark"
                android:textSize="@dimen/dp12"/>

            <TextView
                android:id="@+id/tvGoodsSpec"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="4dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/nc_text"
                android:textSize="@dimen/dp12"/>

            <TextView
                android:id="@+id/tvGoodsPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="4dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/nc_red"
                android:textSize="@dimen/dp12"/>

            <LinearLayout
                android:id="@+id/llGift"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/discount_stroke_bg"
                    android:padding="1dp"
                    android:text="@string/layout_cart_bundling_item_goods_buy0"
                    android:textColor="@color/nc_red"
                    android:textSize="@dimen/tv12sp"/>

                <TextView
                    android:id="@+id/tvGiftName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:padding="3dp"
                    android:textColor="@color/nc_text"
                    android:textSize="@dimen/dp12"/>

                <TextView
                    android:id="@+id/tvGiftNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="10dp"
                    android:textColor="@color/buystep_sku_text"
                    android:textSize="@dimen/dp12"/>

            </LinearLayout>

            <TextView
                style="@style/NCLine"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
