<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg_color"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            layout="@layout/activity_base"
            android:visibility="gone" />

        <FrameLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView style="@style/NCLine" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="bottom"
            android:background="@color/nc_white"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/rlHomeID"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/ivHomeID"
                        android:layout_width="@dimen/dp20"
                        android:layout_height="@dimen/dp20"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/main_index_home_bg" />

                    <TextView
                        android:id="@+id/btnHomeID"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/ivHomeID"
                        android:layout_gravity="center_horizontal"
                        android:text="@string/layout_main_view0"
                        android:textSize="@dimen/tv12sp" />
                </LinearLayout>


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlClassID"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/ivClassID"
                        android:layout_width="@dimen/dp20"
                        android:layout_height="@dimen/dp20"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/main_index_class_bg" />

                    <TextView
                        android:id="@+id/btnClassID"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/ivClassID"
                        android:layout_gravity="center_horizontal"
                        android:text="@string/layout_main_view1"
                        android:textSize="@dimen/tv12sp" />
                </LinearLayout>


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlDiscoverID"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <LinearLayout
                    android:id="@+id/llDiscoverID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/ivDiscoverID"
                        android:layout_width="@dimen/dp20"
                        android:layout_height="@dimen/dp20"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/main_index_disvover_bg" />

                    <TextView
                        android:id="@+id/btnDiscoverID"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/ivDiscoverID"
                        android:layout_gravity="center_horizontal"
                        android:text="@string/layout_main_view2"
                        android:textSize="@dimen/tv12sp" />

                </LinearLayout>

                <View
                    android:id="@+id/vhint"
                    android:layout_width="@dimen/dp5"
                    android:layout_height="@dimen/dp5"
                    android:layout_alignTop="@id/llDiscoverID"
                    android:layout_toRightOf="@id/llDiscoverID"
                    android:background="@drawable/nc_page_circle_on" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlCartID"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <LinearLayout
                    android:id="@+id/llCartID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/ivCartID"
                        android:layout_width="@dimen/dp20"
                        android:layout_height="@dimen/dp20"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/main_index_cart_bg" />

                    <TextView
                        android:id="@+id/btnCartID"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/ivCartID"
                        android:layout_gravity="center_horizontal"
                        android:text="@string/layout_main_view3"
                        android:textSize="@dimen/tv12sp" />
                </LinearLayout>


                <!--<TextView-->
                    <!--android:id="@+id/tvCount"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_toRightOf="@id/llCartID"-->
                    <!--android:background="@drawable/red_hint"-->
                    <!--android:text="0"-->
                    <!--android:textColor="@color/nc_text_dark"-->
                    <!--android:textSize="12sp"-->
                    <!--android:visibility="gone" />-->

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlMineID"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/ivMineID"
                        android:layout_width="@dimen/dp20"
                        android:layout_height="@dimen/dp20"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/main_index_mine_bg" />

                    <TextView
                        android:id="@+id/btnMineID"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/ivMineID"
                        android:layout_gravity="center_horizontal"
                        android:text="@string/layout_main_view4"
                        android:textSize="@dimen/tv12sp" />
                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>