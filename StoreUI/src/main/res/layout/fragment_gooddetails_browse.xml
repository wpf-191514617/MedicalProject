<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/app_white"
            android:orientation="horizontal"
            android:padding="@dimen/dp8">

            <TextView
                android:id="@+id/tvIntro"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/layout_fragment_gooddetails_browse0"
                android:textColor="@drawable/goodsdetail_tab_text_selector" />

            <View
                android:id="@+id/dividerSpec"
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/nc_text" />

            <TextView
                android:id="@+id/tvSpec"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/layout_fragment_gooddetails_browse1"
                android:textColor="@drawable/goodsdetail_tab_text_selector" />

            <View
                android:id="@+id/dividerProtection"
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/nc_text" />

            <TextView
                android:id="@+id/tvProtection"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/layout_fragment_gooddetails_browse2"
                android:textColor="@drawable/goodsdetail_tab_text_selector" />

            <View
                android:id="@+id/dividerCommitment"
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/nc_text" />

            <TextView
                android:id="@+id/tvCommitment"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/layout_fragment_gooddetails_browse3"
                android:textColor="@drawable/goodsdetail_tab_text_selector" />

        </LinearLayout>

        <WebView
            android:id="@+id/webDetail"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <include layout="@layout/activity_base_empty" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llBtnGroupDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="50dp"
        android:layout_marginRight="6dp"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView
            android:id="@+id/god_pc_detail"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/circle_shape"
            android:gravity="center"
            android:text="@string/layout_fragment_gooddetails70"
            android:textColor="@color/nc_text"
            android:textSize="@dimen/tv10sp"
            android:visibility="visible" />

    </LinearLayout>


</RelativeLayout>