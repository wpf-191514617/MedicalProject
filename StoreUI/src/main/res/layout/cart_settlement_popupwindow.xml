<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/nc_white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="40dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/nc_text"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/tvOut"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:gravity="center_horizontal"
                android:padding="10dp"
                android:src="@drawable/nc_icon_close" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tvHint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/nc_text"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rlForeignCount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvForeignCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_margin="@dimen/dp8" />

                <TextView
                    android:id="@+id/btnForeignCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="@dimen/dp8"
                    android:background="@color/arrive_notice"
                    android:padding="@dimen/dp2"
                    android:text="@string/layout_fragment_cart_show1"
                    android:textColor="@color/nc_white"
                    android:textSize="@dimen/tv14sp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlVirtualCount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvVirtualCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_margin="@dimen/dp8" />

                <TextView
                    android:id="@+id/btnVirtualCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="@dimen/dp8"
                    android:background="@color/arrive_notice"
                    android:padding="@dimen/dp2"
                    android:text="@string/layout_fragment_cart_show1"
                    android:textColor="@color/nc_white"
                    android:textSize="@dimen/tv14sp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlChainCount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvChainCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_margin="@dimen/dp8" />

                <TextView
                    android:id="@+id/btnChainCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="@dimen/dp8"
                    android:background="@color/arrive_notice"
                    android:padding="@dimen/dp2"
                    android:text="@string/layout_fragment_cart_show1"
                    android:textColor="@color/nc_white"
                    android:textSize="@dimen/tv14sp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlOtherCount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvOtherCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_margin="@dimen/dp8" />

                <TextView
                    android:id="@+id/btnOtherCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="@dimen/dp8"
                    android:background="@color/arrive_notice"
                    android:padding="@dimen/dp2"
                    android:text="@string/layout_fragment_cart_show1"
                    android:textColor="@color/nc_white"
                    android:textSize="@dimen/tv14sp" />

            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>


    <Button
        android:id="@+id/btnCancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/nc_white"
        android:text="@string/cancel"
        android:textColor="@color/nc_black"
        android:textSize="@dimen/tv14sp" />

</RelativeLayout>