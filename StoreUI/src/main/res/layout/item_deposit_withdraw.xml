<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/item_border"
    android:padding="5dp">


    <ImageView
        android:id="@+id/ivDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/nc_icon_arrow_right"
        android:visibility="visible" />

    <LinearLayout
        android:id="@+id/llDepositPayment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/ivDetail"
        android:orientation="vertical"
        android:padding="5dp">

        <LinearLayout
            android:id="@+id/mine_deposit_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/mine_deposit_payment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="123"
                android:textSize="@dimen/tv20sp" />

            <TextView
                android:id="@+id/mine_deposit_yuan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/nc_green"
                android:textSize="@dimen/tv12sp" />
        </LinearLayout>


        <TextView
            android:id="@+id/mine_deposit_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/mine_deposit_ll"
            android:textSize="@dimen/tv12sp" />

    </LinearLayout>


    <RelativeLayout
        android:id="@+id/llDepositState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp4"
        android:layout_centerVertical="true">

        <TextView
            android:id="@+id/mine_deposit_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/nc_text"
            android:textSize="@dimen/tv14sp" />

        <TextView
            android:id="@+id/mine_deposit_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/mine_deposit_state"
            android:layout_marginTop="5dp"
            android:lineSpacingExtra="6dp"
            android:textColor="@color/nc_text"
            android:textSize="@dimen/tv14sp" />
    </RelativeLayout>


</RelativeLayout>