<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/rlGoodClass"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:background="@color/nc_bg_light">

        <ImageView
            android:id="@+id/tvGoodsClassDot"
            android:layout_width="6dp"
            android:layout_height="6dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/nc_sharp_dot2" />

        <TextView
            android:id="@+id/tvGoodsClassName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:textColor="@color/nc_black" />

        <ImageView
            android:id="@+id/btnGoodsClass"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/nc_icon_arrow_right" />

    </RelativeLayout>

    <TextView style="@style/NCLine" />

    <net.shopnc.b2b2c.android.custom.MyGridView
        android:id="@+id/gvGoodsClass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/nc_white"
        android:isScrollContainer="false"
        android:listSelector="#00000000"
        android:numColumns="3"
        android:verticalSpacing="5dp">

    </net.shopnc.b2b2c.android.custom.MyGridView>

    <TextView
        android:id="@+id/tvLine"
        style="@style/NCLine" />
</LinearLayout>