<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/app_white"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvOrderNo"
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="@string/layout_promotion_order_list_item0"
            android:textColor="@color/nc_text"
            android:textSize="@dimen/tv14sp"/>

        <TextView
            android:id="@+id/tvOrderState"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical"
            android:text="@string/layout_promotion_order_list_item1"
            android:textColor="@color/nc_red"
            android:textSize="@dimen/tv14sp"/>


    </LinearLayout>


    <View style="@style/NCLine"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:id="@+id/llGoodPic"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="4dp">

            <ImageView
                android:id="@+id/ivGoodPic"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <TextView
                android:id="@+id/tvStateDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:background="@color/bottom_bar_red"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:text="@string/layout_promotion_order_list_item2"
                android:textColor="@color/app_white"
                android:textSize="@dimen/tv12sp"/>
        </RelativeLayout>


        <TextView
            android:id="@+id/tvGoodName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="26dp"
            android:layout_toLeftOf="@+id/tvGoodPrice"
            android:layout_toRightOf="@+id/llGoodPic"
            android:maxLines="2"
            android:paddingTop="6dp"
            android:text="@string/layout_promotion_order_list_item3"
            android:textColor="@color/nc_text_dark"
            android:textSize="@dimen/dp14"/>

        <TextView
            android:id="@+id/tvGoodsSpec"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvGoodName"
            android:layout_toLeftOf="@+id/tvGoodPrice"
            android:layout_toRightOf="@+id/llGoodPic"
            android:maxLines="2"
            android:paddingBottom="4dp"
            android:text="spec"
            android:textColor="@color/buystep_sku_text"
            android:textSize="@dimen/tv12sp"/>

        <TextView
            android:id="@+id/tvStoreName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvGoodsSpec"
            android:layout_toLeftOf="@+id/tvGoodPrice"
            android:layout_toRightOf="@+id/llGoodPic"
            android:maxLines="2"
            android:paddingBottom="4dp"
            android:text="spec"
            android:textColor="@color/buystep_sku_text"
            android:textSize="@dimen/tv12sp"/>

        <TextView
            android:id="@+id/tvGoodPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingRight="6dp"
            android:paddingTop="6dp"
            android:singleLine="true"
            android:text="@string/layout_promotion_order_list_item4"
            android:textColor="@color/nc_text"
            android:textSize="@dimen/tv12sp"/>

        <TextView
            android:id="@+id/tvGoodsNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tvGoodPrice"
            android:paddingRight="6dp"
            android:singleLine="true"
            android:text="1"
            android:textColor="#959595"
            android:textSize="@dimen/tv12sp"/>


        <TextView
            android:id="@+id/tvGoodPrice2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tvStoreName"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tvGoodPrice"
            android:paddingRight="6dp"
            android:singleLine="true"
            android:text="@string/layout_promotion_order_list_item5"
            android:textColor="@color/nc_text_dark"
            android:textSize="@dimen/tv12sp"/>
    </RelativeLayout>

    <View style="@style/NCLine"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="@string/layout_promotion_order_list_item6"
            android:textColor="@color/nc_text"
            android:textSize="@dimen/tv14sp"/>

        <TextView
            android:id="@+id/tvCommissionPercentage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_weight="1"
            android:text="20.00%"
            android:textColor="@color/nc_text_dark"
            android:textSize="@dimen/tv14sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="4dp"
            android:text="@string/layout_promotion_order_list_item7"
            android:textColor="@color/nc_text"
            android:textSize="@dimen/tv14sp"/>

        <TextView
            android:id="@+id/tvCommission"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="@string/layout_promotion_order_list_item8"
            android:textColor="@color/nc_red"
            android:textSize="@dimen/tv14sp"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/withdraw_btn_gray"/>
</LinearLayout>