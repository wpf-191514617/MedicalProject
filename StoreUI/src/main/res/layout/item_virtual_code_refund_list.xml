<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/btnPreSelect"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_centerVertical="true"
        android:padding="10dp"
        android:src="@drawable/nc_check" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/btnPreSelect"
        android:padding="@dimen/dp5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/tvStateName"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvVirtualNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/nc_black"
                android:textSize="@dimen/tv16sp" />

            <TextView
                android:id="@+id/tvEndTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/nc_text_dark"
                android:textSize="@dimen/tv12sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/tvStateName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="@color/nc_black"
            android:textSize="@dimen/tv14sp" />
    </RelativeLayout>


</RelativeLayout>