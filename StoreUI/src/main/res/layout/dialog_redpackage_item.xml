<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlRedPackage"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/ivSelect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/dp10"
        android:src="@drawable/nc_check" />

    <TextView
        android:id="@+id/tvRedPackageTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/ivSelect"
        android:textColor="@color/nc_text_dark"
        android:textSize="@dimen/tv14sp" />

    <TextView
        android:id="@+id/tvRedPackageContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/dp10"
        android:textColor="@color/nc_text"
        android:textSize="@dimen/tv12sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignLeft="@id/ivSelect"
        android:layout_alignParentBottom="true"
        android:background="@color/nc_fg" />

</RelativeLayout>