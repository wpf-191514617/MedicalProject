<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:background="@color/nc_white">


    <ImageView
        android:id="@+id/ivGoodPic"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_margin="6dp"
        android:layout_marginRight="10dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_marginRight="6dp"
        android:layout_toRightOf="@+id/ivGoodPic">

        <TextView
            android:id="@+id/tvModel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp5"
            android:layout_marginTop="@dimen/dp8"
            android:lines="1"
            android:padding="@dimen/dp2"
            android:textColor="@color/nc_white"
            android:textSize="@dimen/tv12sp"
            android:visibility="gone" />


        <TextView
            android:id="@+id/tvGoodName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp5"
            android:layout_toRightOf="@id/tvModel"
            android:lines="2"
            android:textColor="@color/black"
            android:textSize="@dimen/tv16sp" />


        <TextView
            android:id="@+id/tvGoodJingle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvGoodName"
            android:maxLines="1"
            android:textColor="@color/nc_fg"
            android:textSize="@dimen/dp12" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/rlOwnStore"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvGoodPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="312.00"
                android:textColor="@color/nc_red"
                android:textSize="@dimen/tv20sp" />


            <TextView
                android:id="@+id/tvGiftFlag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:layout_marginLeft="6dp"
                android:background="@drawable/red_round_small"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:text="@string/layout_recyclerview_searchgood_list_item0"
                android:textColor="@color/nc_white"
                android:textSize="@dimen/dp10"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvPromotionFlag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:layout_marginLeft="6dp"
                android:background="@drawable/red_round_small"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:text="@string/layout_recyclerview_searchgood_list_item1"
                android:textColor="@color/nc_white"
                android:textSize="@dimen/dp10"
                android:visibility="gone" />


            <TextView
                android:id="@+id/tv_pi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:background="@color/wholesale_blue"
                android:padding="2dp"
                android:text="@string/layout_recyclerview_searchgood_list_item2"
                android:textColor="@color/white"
                android:textSize="@dimen/dp10"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvBitchNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/rlOwnStore"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="4dp"
                android:layout_marginRight="6dp"
                android:background="@drawable/wholesale_bg"
                android:padding="2dp"
                android:text="@string/layout_recyclerview_searchgood_list_item3"
                android:textColor="@color/wholesale_blue"
                android:textSize="@dimen/dp10"
                android:visibility="gone" />
        </LinearLayout>


        <RelativeLayout
            android:id="@+id/rlOwnStore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="6dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivStoreImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="6dp"
                android:src="@drawable/nc_icon_more_dot" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/ivStoreImg"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvOwnShop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="8dp"
                    android:background="@drawable/red_border_small"
                    android:text="@string/layout_recyclerview_searchgood_list_item4"
                    android:textColor="@color/nc_red"
                    android:textSize="@dimen/dp8" />

                <TextView
                    android:id="@+id/tvGoodSalenum"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/layout_recyclerview_searchgood_list_item5"
                    android:textColor="@color/nc_text"
                    android:textSize="@dimen/dp12" />

                <TextView
                    android:id="@+id/tvFavorableRate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/layout_recyclerview_searchgood_list_item6"
                    android:textColor="@color/nc_text"
                    android:textSize="@dimen/dp12" />
            </LinearLayout>


        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/nc_border" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/llPopStore"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_toRightOf="@+id/ivGoodPic"
        android:background="@color/nc_bg"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/tvStoreName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/nc_icon_arrow_right"
            android:padding="6dp"
            android:textSize="@dimen/dp14" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/serachshow_store_border" />

        <LinearLayout
            android:id="@+id/llStoreOther"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/llStoreDesEval"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="4dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/layout_recyclerview_searchgood_list_item7"
                    android:textSize="@dimen/dp12" />

                <TextView
                    android:id="@+id/storeDesEval"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5.0"
                    android:textSize="@dimen/dp12" />

                <TextView
                    android:id="@+id/storeDesEvalTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:padding="1dp"
                    android:text="5.0"
                    android:textColor="@color/nc_white"
                    android:textSize="@dimen/dp10" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llStoreServiceEval"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="4dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/layout_recyclerview_searchgood_list_item8"
                    android:textSize="@dimen/dp12" />

                <TextView
                    android:id="@+id/storeServiceEval"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5.0"
                    android:textSize="@dimen/dp12" />

                <TextView
                    android:id="@+id/storeServiceEvalTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:padding="1dp"
                    android:text="5.0"
                    android:textColor="@color/nc_white"
                    android:textSize="@dimen/dp10" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llStoreDeliveryEval"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="4dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/layout_recyclerview_searchgood_list_item9"
                    android:textSize="@dimen/dp12" />

                <TextView
                    android:id="@+id/storeDeliveryEval"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5.0"
                    android:textSize="@dimen/dp12" />

                <TextView
                    android:id="@+id/storeDeliveryEvalTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:padding="1dp"
                    android:text="5.0"
                    android:textColor="@color/nc_white"
                    android:textSize="@dimen/dp10" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>

