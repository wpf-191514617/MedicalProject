<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/nc_bg"
    android:orientation="vertical">

    <include
        layout="@layout/activity_base"
        android:visibility="gone" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/nc_title_bg"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnCancle"
            style="@style/NCTextButton"
            android:layout_alignParentLeft="true"
            android:text="@string/layout_activity_login0" />

        <TextView
            style="@style/NCTitleText"
            android:text="@string/layout_activity_login1" />

        <Button
            android:id="@+id/btnRegister"
            style="@style/NCTextButton"
            android:layout_alignParentRight="true"
            android:text="@string/layout_activity_login2" />

        <View
            style="@style/NCLine"
            android:layout_alignParentBottom="true" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/llLogin"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:background="@color/nc_title_bg"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/rlLoginNormal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:id="@+id/llNormal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivLoginNormal"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/user" />

                <TextView
                    android:id="@+id/tvNormal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:text="@string/layout_activity_login3"
                    android:textSize="@dimen/tv12sp" />
            </LinearLayout>

            <View
                android:id="@+id/viewNormal"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_alignLeft="@id/llNormal"
                android:layout_alignParentBottom="true"
                android:layout_alignRight="@id/llNormal"
                android:background="@color/nc_red" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlLoginPhone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:id="@+id/llPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivLoginPhone"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/mobile" />

                <TextView
                    android:id="@+id/tvPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:text="@string/layout_activity_login4"
                    android:textSize="@dimen/tv12sp" />
            </LinearLayout>

            <View
                android:id="@+id/viewPhone"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_alignLeft="@id/llPhone"
                android:layout_alignParentBottom="true"
                android:layout_alignRight="@id/llPhone"
                android:background="@color/nc_red" />

        </RelativeLayout>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/llLoginNormal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp10"
        android:background="@color/nc_white"
        android:orientation="vertical">

        <View style="@style/NCLine" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal">

            <TextView
                style="@style/NCFormText"
                android:gravity="right"
                android:text="@string/layout_activity_login5" />

            <net.shopnc.b2b2c.android.custom.edittext.EditTextForDelete
                android:id="@+id/etUsername"
                style="@style/NCFormEditNoBorder"
                android:hint="@string/layout_activity_login6"
                android:paddingRight="@dimen/dp10" />

        </LinearLayout>

        <View style="@style/NCLine" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal">

            <TextView
                style="@style/NCFormText"
                android:gravity="right"
                android:text="@string/layout_activity_login7" />

            <net.shopnc.b2b2c.android.custom.edittext.EditTextForDelete
                android:id="@+id/etPassword"
                style="@style/NCFormEditNoBorder"
                android:hint="@string/layout_activity_login8"
                android:paddingRight="@dimen/dp10"
                android:password="true" />

        </LinearLayout>

        <View style="@style/NCLine" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal">

            <TextView
                style="@style/NCFormText"
                android:text="@string/layout_activity_login9" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <net.shopnc.b2b2c.android.custom.edittext.EditTextForDelete
                    android:id="@+id/etCode"
                    style="@style/NCFormEditNoBorder"
                    android:layout_alignParentLeft="true"
                    android:hint="@string/layout_activity_login10"
                    android:layout_toLeftOf="@+id/ivCode"
                    android:paddingRight="@dimen/dp10" />

                <ImageView
                    android:id="@+id/ivCode"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true" />

            </RelativeLayout>

            <TextView style="@style/NCLine" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llLoginPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp10"
        android:background="@color/nc_white"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView style="@style/NCLine" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal">

            <TextView
                style="@style/NCFormText"
                android:text="@string/layout_activity_login11" />

            <net.shopnc.b2b2c.android.custom.edittext.EditTextForDelete
                android:id="@+id/etPhoneNumber"
                style="@style/NCFormEditNoBorder"
                android:paddingRight="@dimen/dp10"
                android:hint="@string/layout_activity_login12" />
        </LinearLayout>

        <TextView style="@style/NCLine" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal">

            <TextView
                style="@style/NCFormText"
                android:text="@string/layout_activity_login13" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/ivCodePhone"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true" />

                <net.shopnc.b2b2c.android.custom.edittext.EditTextForDelete
                    android:id="@+id/etCodePhone"
                    style="@style/NCFormEditNoBorder"
                    android:layout_toLeftOf="@id/ivCodePhone"
                    android:paddingRight="@dimen/dp10"
                    android:hint="@string/layout_activity_login14" />
            </RelativeLayout>

        </LinearLayout>

        <TextView style="@style/NCLine" />

    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="30dp"
        android:visibility="visible">

        <TextView
            android:id="@+id/login_auto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/remind_login"
            android:text="âˆš"
            android:textColor="@color/nc_white"
            android:visibility="gone" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/login_auto"
            android:text="@string/layout_activity_login15"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvForgetPwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="@string/layout_activity_login16"
            android:textColor="@color/nc_blue"
            android:visibility="visible" />

    </RelativeLayout>

    <Button
        android:id="@+id/btnLogin"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/nc_btn_corner_bg_selected"
        android:text="@string/layout_activity_login17"
        android:textColor="@drawable/nc_btn_text_color_selected" />

    <ImageView
        android:id="@+id/ivThreeLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:adjustViewBounds="true"
        android:src="@drawable/nc_login_split" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp">

        <ImageButton
            android:id="@+id/btnQQ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:src="@drawable/nc_icon_qq"
            android:visibility="visible" />

        <ImageButton
            android:id="@+id/btnWeiXin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:src="@drawable/nc_icon_wx"
            android:visibility="visible" />

    </LinearLayout>

</LinearLayout>