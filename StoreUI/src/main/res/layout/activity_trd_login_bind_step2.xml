<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/nc_bg"
              android:orientation="vertical">

    <include layout="@layout/activity_base"/>

    <TextView
        android:id="@+id/tvPhone"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center_vertical"
        android:text="@string/layout_activity_trd_login_bind_step20"
        android:textColor="@color/nc_text"
        android:textSize="12dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/nc_white"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView style="@style/NCLine"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal">

            <TextView
                style="@style/NCFormText"
                android:layout_width="wrap_content"
                android:text="@string/layout_activity_trd_login_bind_step21"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <EditText
                    android:id="@+id/etSmsCaptcha"
                    style="@style/NCFormEditNoBorder"
                    android:layout_alignParentLeft="true"
                    android:hint="@string/layout_activity_trd_login_bind_step22"
                    android:inputType="number"/>

                <Button
                    android:id="@+id/btnGetSmsCaptcha"
                    style="@style/NCTextButtonSmall"
                    android:layout_width="110dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="@string/layout_activity_trd_login_bind_step23"
                    android:textColor="@color/nc_blue"/>
            </RelativeLayout>
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/llSecCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/nc_white"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView style="@style/NCLine"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal">

            <TextView
                style="@style/NCFormText"
                android:layout_width="wrap_content"
                android:text="@string/layout_activity_trd_login_bind_step24"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <EditText
                    android:id="@+id/etCode"
                    style="@style/NCFormEditNoBorder"
                    android:layout_alignParentLeft="true"
                    android:hint="@string/layout_activity_trd_login_bind_step25"/>

                <ImageView
                    android:id="@+id/ivCode"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>

        </LinearLayout>


    </LinearLayout>

