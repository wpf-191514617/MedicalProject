    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/nc_white"
        android:orientation="vertical">

        <TextView style="@style/NCLine"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal">

            <TextView
                style="@style/NCFormText"
                android:layout_width="wrap_content"
                android:text="@string/layout_activity_trd_login_bind_step28"/>

            <EditText
                android:id="@+id/etPassword"
                style="@style/NCFormEditNoBorder"
                android:layout_alignParentLeft="true"
                android:hint="@string/layout_activity_trd_login_bind_step29"
                android:inputType="textPassword"/>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/nc_white"
        android:orientation="vertical">

        <TextView style="@style/NCLine"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal">

            <TextView
                style="@style/NCFormText"
                android:layout_width="wrap_content"
                android:text="@string/layout_activity_trd_login_bind_step210"/>

            <EditText
                android:id="@+id/etPasswordConfirm"
                style="@style/NCFormEditNoBorder"
                android:layout_alignParentLeft="true"
                android:hint="@string/layout_activity_trd_login_bind_step211"
                android:inputType="textPassword"/>

        </LinearLayout>

        <TextView style="@style/NCLine"/>

    </LinearLayout>


    <Button
        android:id="@+id/btnRegNext"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="@dimen/dp20"
        android:background="@drawable/user_bg_selector"
        android:text="@string/layout_activity_trd_login_bind_step212"
        android:textColor="@color/nc_white"/>

</LinearLayout>
