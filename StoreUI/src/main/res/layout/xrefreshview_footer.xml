<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/xrefreshview_footer_content"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:layout_gravity="center_horizontal"
    android:background="@android:color/white">

    <LinearLayout
        android:id="@+id/xrefreshview_loading"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:orientation="horizontal">

        <net.shopnc.b2b2c.android.xrefresh.SimpleViewSwithcer
            android:id="@+id/xrefreshview_footer_progressbar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignLeft="@+id/xrefreshview_loading" />

        <TextView
            android:id="@+id/xrefreshview_loading_text"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:gravity="center_vertical"
            android:text="@string/xrefreshview_header_hint_loading" />

    </LinearLayout>

    <TextView
        android:id="@+id/xrefreshview_footer_hint_textview"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="@string/xrefreshview_footer_hint_normal"
        android:visibility="gone" />

    <TextView
        android:id="@+id/xrefreshview_footer_click_textview"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="@string/xrefreshview_footer_hint_ready"
        android:visibility="gone" />
</RelativeLayout>