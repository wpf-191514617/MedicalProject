<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical">


    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/grayf5"/>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabDocInterview"
        android:layout_width="match_parent"
        android:background="@color/white"
        app:tabTextColor="@color/gray33"
        app:tabSelectedTextColor="@color/colorAccent"
        android:layout_height="@dimen/dimen_46dp"/>

    <com.donkingliang.imageselector.view.MyViewPager
        android:id="@+id/vpDocInterView"
        android:layout_width="match_parent"
        android:layout_height="222dp"/>

</LinearLayout>