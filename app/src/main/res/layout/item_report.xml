<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <com.lihang.ShadowLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:hl_cornerRadius="@dimen/dimen_10dp"
        app:hl_shadowColor="#337F7F7F"
        app:hl_shadowBackColor="@color/white"
        android:layout_marginTop="@dimen/dimen_5dp"
        android:layout_marginLeft="@dimen/dimen_11dp"
        android:layout_marginRight="@dimen/dimen_11dp"
        android:layout_marginBottom="@dimen/dimen_5dp"
        app:hl_shadowLimit="5dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_80dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="@dimen/dimen_96dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="张东东"
                    android:textColor="#ff333333"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="男"
                    android:textColor="#ff333333"
                    android:textSize="12sp"/>


            </LinearLayout>


            <View
                android:layout_width="0.8dp"
                android:layout_height="@dimen/dimen_42dp"
                android:background="@color/grayDE"/>


            <LinearLayout
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingLeft="@dimen/dimen_16dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2017-12-22"
                    android:textColor="@color/gray33"
                    android:textSize="12sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="东莞市第五人民医院"
                    android:textColor="@color/gray33"
                    android:layout_marginTop="@dimen/dimen_8dp"
                    android:textSize="12sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="体检号：20001222156168516"
                    android:textColor="#858585"
                    android:layout_marginTop="@dimen/dimen_3dp"
                    android:textSize="12sp"/>

            </LinearLayout>

            <TextView
                android:layout_width="@dimen/dimen_28dp"
                android:layout_height="match_parent"
                android:background="@drawable/bg_raight_radius_blue"
                android:gravity="center"
                android:text="体\n检\n报\n告"
                android:textColor="#ffffffff"
                android:textSize="12sp"/>


        </LinearLayout>


    </com.lihang.ShadowLayout>

</LinearLayout>