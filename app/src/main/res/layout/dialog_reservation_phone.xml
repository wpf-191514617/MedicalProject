<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_top_radius_white"
    android:paddingLeft="@dimen/dimen_16dp"
    android:paddingRight="@dimen/dimen_16dp"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingTop="@dimen/dimen_15dp"
        android:paddingBottom="@dimen/dimen_15dp"
        android:orientation="horizontal">


        <TextView
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="短信接收号码"
            android:textColor="#ff333333"
            android:textSize="16sp"/>


        <ImageView
            android:id="@+id/ivClose"
            android:layout_width="@dimen/dimen_35dp"
            android:layout_height="@dimen/dimen_35dp"
            android:padding="@dimen/dimen_10dp"
            android:layout_marginRight="-10dp"
            android:src="@drawable/nc_icon_close"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_25dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="就诊人"
            android:textColor="#ff333333"
            android:textSize="16sp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="卢嘉成"
            android:textColor="#ff333333"
            android:textSize="16sp"
            />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_25dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="就诊人手机号"
            android:textColor="#ff333333"
            android:textSize="16sp" />


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:background="@null"
            android:hint="请输入手机号"
            android:textColor="#ff333333"
            android:textSize="16sp"
            android:inputType="phone"/>


    </LinearLayout>

    <include layout="@layout/line"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_15dp"
        android:text="就诊人“卢嘉成”手机号已填写，短信将下发到就诊人的手机号中。"
        android:textColor="#ff999999"
        android:textSize="12sp"
        android:lineSpacingExtra="@dimen/dimen_3dp"/>


    <com.beitone.medical_store.app.widget.AppButton
        android:id="@+id/btnConfrim"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_45dp"
        android:background="@drawable/bg_radiu21"
        android:layout_marginTop="@dimen/dimen_22dp"
        android:layout_marginBottom="@dimen/dimen_17dp"
        android:text="确定" />

</LinearLayout>