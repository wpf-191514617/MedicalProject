<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:paddingBottom="@dimen/dimen_25dp"
        android:paddingTop="@dimen/dimen_18dp"
        android:paddingLeft="@dimen/dimen_17dp"
        android:paddingRight="@dimen/dimen_17dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="医院等级"
        android:textColor="#ff858585"
        android:textSize="14sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_18dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvThreeHospital"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="@dimen/dimen_25dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/sp_14"
            android:text="三甲医院"
            android:textColor="@drawable/sel_tv_white1"
            android:background="@drawable/sel_bg_tv_white"/>

        <View
            android:layout_width="@dimen/dimen_21dp"
            android:layout_height="@dimen/dp20"/>

        <TextView
            android:id="@+id/tvSecondHospital"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="@dimen/dimen_25dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/sp_14"
            android:text="二甲医院"
            android:textColor="@drawable/sel_tv_white1"
            android:background="@drawable/sel_bg_tv_white"/>

        <View
            android:layout_width="@dimen/dimen_21dp"
            android:layout_height="@dimen/dp20"/>

        <TextView
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="@dimen/dimen_25dp"
            android:layout_weight="1"/>



    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="问诊类型"
        android:textColor="#ff858585"
        android:layout_marginTop="@dimen/dimen_16dp"
        android:textSize="14sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_18dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvInquiryType1"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="@dimen/dimen_25dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/sp_14"
            android:text="图文"
            android:textColor="@drawable/sel_tv_white1"
            android:background="@drawable/sel_bg_tv_white"/>

        <View
            android:layout_width="@dimen/dimen_21dp"
            android:layout_height="@dimen/dp20"/>

        <TextView
            android:id="@+id/tvInquiryType2"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="@dimen/dimen_25dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/sp_14"
            android:text="电话"
            android:textColor="@drawable/sel_tv_white1"
            android:background="@drawable/sel_bg_tv_white"/>

        <View
            android:layout_width="@dimen/dimen_21dp"
            android:layout_height="@dimen/dp20"/>

        <TextView
            android:id="@+id/tvInquiryType3"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="@dimen/dimen_25dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/sp_14"
            android:text="视频"
            android:textColor="@drawable/sel_tv_white1"
            android:background="@drawable/sel_bg_tv_white"/>

    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="医生职称"
        android:textColor="#ff858585"
        android:layout_marginTop="@dimen/dimen_16dp"
        android:textSize="14sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_18dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvDoctorType1"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="@dimen/dimen_25dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/sp_14"
            android:text="主任医师"
            android:textColor="@drawable/sel_tv_white1"
            android:background="@drawable/sel_bg_tv_white"/>

        <View
            android:layout_width="@dimen/dimen_21dp"
            android:layout_height="@dimen/dp20"/>

        <TextView
            android:id="@+id/tvDoctorType2"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="@dimen/dimen_25dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/sp_14"
            android:text="副主任医师"
            android:textColor="@drawable/sel_tv_white1"
            android:background="@drawable/sel_bg_tv_white"/>

        <View
            android:layout_width="@dimen/dimen_21dp"
            android:layout_height="@dimen/dp20"/>

        <TextView
            android:id="@+id/tvDoctorType3"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="@dimen/dimen_25dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/sp_14"
            android:text="主治医师"
            android:textColor="@drawable/sel_tv_white1"
            android:background="@drawable/sel_bg_tv_white"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dimen_20dp"
        android:paddingRight="@dimen/dimen_20dp"
        android:layout_marginTop="@dimen/dimen_26dp">

        <Button
            android:id="@+id/btnReset"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="@dimen/dimen_38dp"
            android:layout_weight="1"
            android:text="重置"
            android:textColor="#ff999999"
            android:textSize="14sp"
            android:stateListAnimator="@null"
            android:background="@drawable/bg_btn_stroke"/>

        <View
            android:layout_width="@dimen/dimen_22dp"
            android:layout_height="@dimen/dimen_10dp"/>

        <Button
            android:id="@+id/btnCommit"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="@dimen/dimen_38dp"
            android:layout_weight="1"
            android:text="确定"
            android:textColor="#ffffffff"
            android:textSize="14sp"
            android:stateListAnimator="@null"
            android:background="@drawable/bg_button_blue_3"/>


    </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/v_outside"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent" />

</LinearLayout>