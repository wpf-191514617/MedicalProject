<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/dimen_16dp"
    android:paddingRight="@dimen/dimen_16dp"
    android:paddingTop="@dimen/dimen_23dp"
    android:background="@color/white"
    android:orientation="vertical">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="@dimen/dimen_43dp"
            android:layout_height="@dimen/dimen_43dp"
            android:src="@mipmap/ic_launcher_round"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_12dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="张医生"
                    android:textColor="#ff333333"
                    android:textSize="16sp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="主治医师"
                    android:layout_marginLeft="@dimen/dimen_10dp"
                    android:textColor="#ff858585"
                    android:textSize="14sp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_reservation_tag"
                    android:layout_marginLeft="@dimen/dimen_8dp"
                    android:paddingLeft="@dimen/dimen_5dp"
                    android:paddingRight="@dimen/dimen_5dp"
                    android:paddingTop="@dimen/dimen_2dp"
                    android:paddingBottom="@dimen/dimen_2dp"
                    android:text="可挂号"
                    android:textColor="#ff15d2c3"
                    android:textSize="12sp"/>

            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="怡心园 外耳科  "
                android:textColor="#ff333333"
                android:textSize="12sp"
                android:layout_marginTop="@dimen/dimen_8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="擅长：感冒、肺炎、哮喘、鼻咽炎、支气管扩张等...
感冒、肺炎、哮喘、鼻咽炎、支气管扩张等..."
                android:textColor="#ff858585"
                android:textSize="12sp"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:lineSpacingExtra="@dimen/dimen_5dp"
                android:layout_marginBottom="@dimen/dimen_23dp"/>

        </LinearLayout>

    </LinearLayout>



    <include layout="@layout/line"/>

</LinearLayout>