<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingTop="@dimen/dimen_20dp"
    android:paddingBottom="@dimen/dimen_24dp"
    android:paddingLeft="@dimen/dimen_16dp"
    android:paddingRight="@dimen/dimen_16dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        


        <LinearLayout
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="@dimen/dimen_3dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvDoctorName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="张医生"
                android:textColor="#ff333333"
                android:textSize="16sp"/>


            <TextView
                android:id="@+id/tvDoctorJobTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="呼吸内科 主治医师"
                android:textColor="#ff858585"
                android:textSize="14sp"
                android:layout_marginTop="@dimen/dimen_9dp"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_8dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tvHospitalName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="天津医科大学总医院"
                    android:textColor="#ff333333"
                    android:textSize="12sp"
                    />

                <TextView
                    android:id="@+id/tvHospitalLevel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="三甲"
                    android:textColor="#FEA50B"
                    android:layout_marginLeft="@dimen/dimen_8dp"
                    android:textSize="12sp"/>

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:layout_width="@dimen/dimen_72dp"
            android:layout_height="@dimen/dimen_72dp"
            android:layout_marginEnd="@dimen/dimen_2dp"
            android:src="@mipmap/ic_launcher_round"/>
        
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/layoutDoctorSummary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dimen_15dp">

        <LinearLayout
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvDoctorGoodAt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="擅长：感冒、肺炎、哮喘、鼻咽炎、支气管扩等..."
                android:lines="1"
                android:ellipsize="end"
                android:textColor="#ff858585"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/tvDoctorEffectiveness"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="接诊率：100%    问诊量：500    好评率：100%"
                android:textColor="#ff858585"
                android:layout_marginTop="@dimen/dimen_8dp"
                android:textSize="12sp"
                />

        </LinearLayout>


        <TextView
            android:id="@+id/tvGoSummary"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/dimen_20dp"
            android:text="个人简介"
            android:textColor="#ff333333"
            android:textSize="12sp"
            android:gravity="center_vertical"
            android:drawableRight="@drawable/ic_next"
            android:drawablePadding="@dimen/dp_5"/>


    </LinearLayout>

</LinearLayout>