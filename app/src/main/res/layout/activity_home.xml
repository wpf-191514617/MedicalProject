<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/layoutHomeContent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <cn.betatown.mobile.beitonelibrary.widget.BmMainNavigateTabBar
        android:id="@+id/mainTab"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        app:containerId="@+id/layoutHomeContent"
        android:background="@color/white"
        app:navigateTabTextColor="@color/gray33"
        app:navigateTabSelectedTextColor="@color/colorAccent"/>

</LinearLayout>