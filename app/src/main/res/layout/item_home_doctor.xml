<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/white"
    android:paddingLeft="@dimen/dimen_16dp"
    android:paddingTop="@dimen/dimen_20dp"
    android:paddingRight="@dimen/dimen_16dp"
    android:paddingBottom="@dimen/dimen_18dp">


    <ImageView
        android:layout_width="@dimen/dimen_43dp"
        android:layout_height="@dimen/dimen_43dp"
        android:src="@mipmap/ic_launcher" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_13dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvDoctorName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="张医生"
                android:textColor="#ff333333"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvDoctor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:text="主治医师"
                android:textColor="#ff858585"
                android:textSize="14sp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10dp">

            <TextView
                android:id="@+id/tvHospitalName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="怡心园 外耳科"
                android:textColor="#ff333333"
                android:textSize="14sp" />

        </LinearLayout>


        <TextView
            android:id="@+id/tvSpecialty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_12dp"
            android:lineSpacingExtra="@dimen/dimen_5dp"
            android:text="擅长：感冒、肺炎、哮喘、鼻咽炎、支气管扩张等"
            android:textColor="#ff858585"
            android:lines="1"
            android:ellipsize="end"
            android:layout_marginBottom="@dimen/dimen_5dp"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tvEfficiency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="接诊率：100% 问诊量：500 好评率：100%"
            android:textColor="#ff858585"
            android:lines="1"
            android:ellipsize="end"
            android:textSize="12sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_16dp"
            android:gravity="bottom"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvSinglePrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#fffe7047"
                android:textSize="14sp"
                android:text="¥50"/>

            <TextView
                android:id="@+id/tvDoctorOnLineStatus"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="@color/gray85"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:textSize="14sp"
                android:text="可咨询"/>

        </LinearLayout>


    </LinearLayout>


</LinearLayout>