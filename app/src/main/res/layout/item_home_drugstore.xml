<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_40dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="在线药房"
            android:textColor="#ff000000"
            android:paddingLeft="@dimen/dimen_16dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="bottom"
            android:paddingBottom="@dimen/dimen_10dp"/>


        <View
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/tvSeeMore"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="查看更多 ＞"
            android:textColor="#ff999999"
            android:paddingLeft="@dimen/dimen_16dp"
            android:paddingRight="@dimen/dimen_16dp"
            android:textSize="12sp"
            android:gravity="bottom"
            android:paddingBottom="@dimen/dimen_10dp"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/dimen_19dp"
        android:layout_marginRight="@dimen/dimen_19dp"
        android:layout_marginTop="@dimen/dimen_10dp">

        <LinearLayout
            android:id="@+id/layoutRegistered"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/dimen_41dp"
                android:layout_height="@dimen/dimen_41dp"
                android:src="@drawable/item_hospital_registered" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:text="风湿骨伤"
                android:textColor="#ff333333"
                android:textSize="14sp" />

        </LinearLayout>

        <View
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <LinearLayout
            android:id="@+id/layoutPayment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/dimen_41dp"
                android:layout_height="@dimen/dimen_41dp"
                android:src="@drawable/item_hospital_registered" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:text="肠胃用药"
                android:textColor="#ff333333"
                android:textSize="14sp"/>

        </LinearLayout>

        <View
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <LinearLayout
            android:id="@+id/layoutCheckup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/dimen_41dp"
                android:layout_height="@dimen/dimen_41dp"
                android:src="@drawable/item_hospital_registered" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:text="预约体检"
                android:textColor="#ff333333"
                android:textSize="14sp"/>

        </LinearLayout>

        <View
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>


        <LinearLayout
            android:id="@+id/layoutInspection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/dimen_41dp"
                android:layout_height="@dimen/dimen_41dp"
                android:src="@drawable/item_hospital_registered" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:text="预约检查"
                android:textColor="#ff333333"
                android:textSize="14sp"/>

        </LinearLayout>

        <View
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>


        <LinearLayout
            android:id="@+id/layoutReportCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/dimen_41dp"
                android:layout_height="@dimen/dimen_41dp"
                android:src="@drawable/item_hospital_registered" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:text="报告单"
                android:textColor="#ff333333"
                android:textSize="14sp"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>